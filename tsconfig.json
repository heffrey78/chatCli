{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noEmitOnError": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "types": ["reflect-metadata", "node"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"]
}
  